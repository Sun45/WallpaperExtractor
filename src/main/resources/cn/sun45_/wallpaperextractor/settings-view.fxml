<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.canvas.Canvas?>
<VBox alignment="CENTER" spacing="25.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="cn.sun45_.wallpaperextractor.controller.SettingsController"
      style="-fx-background-color: #f8f9fa;">
    <padding>
        <Insets bottom="40.0" left="50.0" right="50.0" top="40.0"/>
    </padding>

    <!-- åº”ç”¨æ ‡é¢˜å’Œå›¾æ ‡ -->
    <HBox alignment="CENTER" spacing="15">
        <StackPane onMouseClicked="#onIconClicked" style="-fx-cursor: hand;">
            <Canvas fx:id="iconCanvas" width="60" height="60"/>
            <ImageView fx:id="appIcon" fitWidth="32" fitHeight="32" preserveRatio="true">
                <Image url="@icon.png"/>
            </ImageView>
        </StackPane>
        <Label text="%settings.title" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #343a40;"/>
    </HBox>

    <!-- æ‹–æ‹½åŒºåŸŸ -->
    <StackPane fx:id="dragArea"
               style="-fx-border-color: #007bff; -fx-border-width: 2px; -fx-border-style: dashed; -fx-background-color: #ffffff; -fx-cursor: hand; -fx-background-radius: 12px; -fx-border-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);"
               onMouseClicked="#onDragAreaClicked" prefWidth="450" prefHeight="150">
        <VBox alignment="CENTER" spacing="12">
            <Label text="ðŸ“" style="-fx-font-size: 42px; -fx-text-fill: #007bff;"/>
            <Label fx:id="hintLabel" text="%drag.area.hint"
                   style="-fx-font-size: 15px; -fx-text-fill: #495057; -fx-font-weight: 500;"/>
        </VBox>
    </StackPane>

    <!-- åº”ç”¨æè¿° -->
    <Label fx:id="descriptionLabel" wrapText="true" maxWidth="550"
           style="-fx-font-size: 14px; -fx-text-fill: #495057; -fx-text-alignment: left; -fx-line-spacing: 2.0; -fx-font-family: 'Segoe UI', system-ui, sans-serif;"/>

    <!-- GitHubé“¾æŽ¥å¸¦å¤´åƒ -->
    <HBox alignment="CENTER_LEFT" spacing="8">
        <ImageView fitWidth="32" fitHeight="32" preserveRatio="true">
            <Image url="@profile-picture.jpg"/>
        </ImageView>
        <Hyperlink fx:id="githubLink" text="%github.link.text"
                   style="-fx-font-size: 13px; -fx-text-fill: #007bff; -fx-border-color: transparent; -fx-underline: true;"
                   onAction="#onGithubLinkClicked"/>
    </HBox>
</VBox>
